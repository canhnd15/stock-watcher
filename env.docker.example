# Docker Compose Environment Variables
# Copy this file to .env and customize for your deployment
# 
# Usage: cp env.docker.example .env
# Then edit .env with your production values

# Database Configuration
DB_USERNAME=postgre
DB_PASSWORD=admin
DB_PORT=5433

# Service Ports
BACKEND_PORT=8899
CRON_JOBS_PORT=8898
FRONTEND_PORT=8089

# JWT Configuration
# IMPORTANT: Generate a secure random secret for production!
# Use: openssl rand -hex 32
JWT_SECRET=mySecretKeyForJWTTokenGenerationMustBeLongEnoughForHS512AlgorithmWithMinimum256Bits

# Spring Profile
SPRING_PROFILES_ACTIVE=docker

# Keycloak Configuration
KEYCLOAK_PORT=8090
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=<secure-password>
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=stock-watcher
KEYCLOAK_CLIENT_ID=stock-watcher-frontend
KEYCLOAK_CLIENT_SECRET=<will-be-generated>

